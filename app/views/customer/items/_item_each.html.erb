<div>
  <%= link_to item_path(item.id) do %>
  <div>
    <%= attachment_image_tag item, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  </div>
  <p>
    <%= item.name %>
  </p>
  <% end %>

  <% if item.sale == true %>
    <p>¥<%= item.price.to_s(:delimited) %></p>
  <% elsif item.sale == false %>
    <p>売り切れ中</p>
  <% end %>
</div>