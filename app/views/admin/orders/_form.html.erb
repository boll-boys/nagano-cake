<%= form_with model:order, local:true do |f| %>
  <div class="form-group">
    <%= f.label :customer, '購入者'%>
    <%= f.text_field :customer%>
  </div>
  <div class="form-group">
    <%= f.label:created_at, "注文日"%>
    <%= f.text_field:created_at%>
  <div class="form-group">
    <%= f.label:address, "配送先"%>
    <%= f.text_field:address%>
  </div>
  </div>
  <div class="form-group">
    <%= f.label:payment_method_, "支払方法"%>
    <%= f.text_field:payment_method_i18n%>
  </div>
  <div class="form-group">
    <%= f.label:status, "注文ステータス"%>
  </div>
  <div class="form-group">
    <%= f.submit "更新"%>
</div>
<% end %>