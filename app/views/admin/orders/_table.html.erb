    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% orders.each do |order|%>
        <% @quantity = 0 %>
        <% order.order_details.each do |order_detail| %>
          <% @quantity += order_detail.amount%>
        <% end %>
        <tr>
          <td>
            <%= link_to admin_order_path(order) do %>
              <%= l order.created_at%>
            <% end %>
          </td>
          <td><%= order.customer.fist_name%> <%= order.customer.last_name%></td>
          <td><%= @quantity%></td>
          <td><%= order.status_%></td>
        </tr>
        <% end %>
      </tbody>
    </table>