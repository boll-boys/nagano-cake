<div class="form-inline">
  <div class="offset-md-1">
    <h4 class="font-weight-bold"><%= "#{@customer.fist_name}" "#{@customer.last_name}" %></h4>
  </div>
    <h4>さんの</h4>
    <h4 class="font-weight-bold"><%= "会員情報編集" %></h4>
  </div>
</div>
</h5>
<div class= container >
   <div class="d-flex align-items-center justify-content-center" >
        <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
        <div class = "row">
             <div class = "col-4" >
                <%= f.label :氏名  %>
             </div>
             <div class = "col-4" >
                <%= f.text_field :fist_name, autofocus: true, class: "form-control" %>
             </div>
             <div class = "col-4" >
                <%= f.text_field  :last_name, autofocus: true, class: "form-control" %>
             </div>
        </div>
        
        <div class = "row">
             <div class = "col-4" >
                <%= f.label :フリガナ  %>
             </div>
             <div class = "col-4" >
                <%= f.text_field :fist_name_kana, autofocus: true, class: "form-control" %>
             </div>
             <div class = "col-4" >
                <%= f.text_field  :last_name_kana, autofocus: true, class: "form-control" %>
             </div>
        </div>
   
        <div class = "row">
             <div class = "col-4" >
                <%= f.label :郵便番号  %>
             </div>
             <div class = "col-4" >
                <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
             </div>
        </div>
        <div class = "row">
             <div class = "col-4" >
                <%= f.label :住所  %>
             </div>
             <div class = "col-4" >
                <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
             </div>
        </div>
        <div class = "row">
             <div class = "col-4" >
                <%= f.label :電話番号 %>
             </div>
             <div class = "col-4" >
                <%= f.text_field :phon_number, autofocus: true, class: "form-control" %>
             </div>
        </div>
        <div class = "row">
             <div class = "col-4" >
                <%= f.label :メールアドレス  %>
             </div>
             <div class = "col-4" >
                <%= f.text_field :email, autofocus: true, class: "form-control" %>
             </div>
        </div>

        <div class="row">
            <div class="col-4 ">
                <%= f.radio_button :is_deleted, :true %>退会
                <%= f.radio_button :is_deleted, :false %>有効
            </div>
          </div>


 <div class="form-inline">
    <div class="form-group" style="height:80px">
    <%= f.submit "編集内容を保存", class: "ml-2 btn px-5  btn-success font-weight-bold" %>
      </div>
    </div>
  </div>
</div>
<% end %>