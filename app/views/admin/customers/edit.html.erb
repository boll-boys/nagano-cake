<div class="form-inline">
  <div class="offset-md-1">
    <h4 class="font-weight-bold"><%= "#{@customer.fist_name}" "#{@customer.last_name}" %></h4>
  </div>
    <h4>さんの</h4>
    <h4 class="font-weight-bold"><%= "会員情報編集" %></h4>
  </div>
</div>
</h5>
<div class = "container" >

 <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>

   <div class="form-inline">
     <div class="form-group">
       <div class="fist_name" >
         <div class="ml-2 ">
    <%= f.label :氏名 %>
          </div>
        </div>
      <div class=" d-flex align-items-center justify-content-center" style="height:80px" >
      <%= f.text_field :fist_name, autofocus: true%>
     </div>
     <%= f.text_field  :last_name, autofocus: true, class: "last_name ml-4"  %>
         </div>
      </div>
    <div class="form-inline">
     <div class="form-group">
      <div class="name_kana" >
          <div class="ml-2">
    <%= f.label :フリガナ %>
          </div>
        </div>
      <div class=" d-flex align-items-center justify-content-center" style="height:80px" >
      <%= f.text_field :fist_name_kana, autofocus: true%>
     </div>
     <%= f.text_field  :last_name_kana, autofocus: true, class: "last_name ml-4"  %>
         </div>
      </div>

  <div class="form-inline">
    <div class="form-group">
      <div class="postal-code">
        <div class="ml-3 ">
    <%= f.label :郵便番号（ハイフンなし） %>
        </div>
          </div>
        <div class="ml-4 d-flex align-items-center justify-content-center" style="height:40px">
    <%= f.text_field :postal_code, autofocus: true, :placeholder =>"0000000" %><br />
        </div>
      </div>
    </div>
  <div class="form-inline">
    <div class="form-group">
      <div class="address">
        <div class="ml-3 mr-5">
    <%= f.label :住所 %>
        </div>
          </div>
         　 <div class="ml-5 d-flex align-items-center justify-content-center"style="height:60px">
    <%= f.text_field :address, autofocus: true, :placeholder =>"東京都渋谷区代々木神園町0-0",:size=>"60" %><br />
           </div>
          </div>
       </div>
  <div class="form-inline">
    <div class="form-group">
      <div class="phon_number">
        <div class="ml-3 ">
    <%= f.label :電話番号（ハイフンなし） %>
        </div>
          </div>
           <div class="ml-3 d-flex align-items-center justify-content-center"style="height:40px">
    <%= f.text_field :phon_number, autofocus: true, :placeholder =>"0000000000" %><br />
    </div>
  </div>
</div>
  <div class="form-inline">
    <div class="form-group">
      <div class="emaail">
        <div class="ml-4 ">
    <%= f.label :メールアドレス %>
        </div>
          </div>
        <div class="ml-5 d-flex align-items-center justify-content-center" style="height:60px">
    <%= f.email_field :email, autofocus: true, :placeholder =>"0000000" %><br />
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="ml-4 ">
  <%= f.radio_button :is_deleted, :true %>退会
  <%= f.radio_button :is_deleted, :false %>有効
      </div>
    </div>


 <div class="form-inline">
    <div class="form-group" style="height:80px">
      <div class="actns" >
    <%= f.submit "編集内容を保存", class: "ml-2 btn px-5  btn-success font-weight-bold" %>
      </div>
    </div>
  </div>
</div>
    <% end %>
</div>
