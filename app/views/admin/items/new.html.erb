<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class="col-xs-12">
      <h2>商品新規登録</h2>
      <%= form_with model:@item, url: admin_items_path, method: :post, class: "form-horizontal" do |f| %>
        <div class="col-xs-4 col-xs-offset-1">
          <div class="img_field">
            <%= attachment_image_tag @item, :image_id, :fill, 100, 100, format: 'jpeg' %>
          </div>
            <%= f.file_field :imag_id, id: "user_img" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, class: "col-sm-9 form-control-static name" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品説明", class: "col-sm-3 control-label" %>
          <%= f.text_area :description, class: "col-sm-9 control-label description" %>
        </div>
        <div class="form-group">
          <%= f.label :"ジャンル", class: "col-sm-3 control-label" %>
          <%= f.collection_select(:genre_id, @genre, :id, :name, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %>
        </div>
        <div class="form-group">
          <%= f.label :"税抜価格", class: "col-sm-3 control-label" %>
          <%= f.text_field :price, class: "col-sm-3 form-control-static price" %>円
        </div>
        <div class="form-group">
          <%= f.label :"販売ステータス", class: "col-sm-3 control-label" %>
          <%= f.select :is_active, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --", class: "col-sm-9 is_active" %>
        </div>
        <div class="form-group">
    	      <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
        </div>
        <% end %>
    </div>
  </div>
</div>