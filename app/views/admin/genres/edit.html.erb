<div class= "container">
  <div class= "row">
    <div class="col-lg-8">
      <h3>ジャンル編集画面</h3>
       <%= form_with model:@genre, url: {controller: 'genres', action: 'update'} do |f| %>
          <div class="col-xs-offset-1">
            <%= f.label :name, "ジャンル名" %>
            <%= f.text_field :name %>
            <%= f.submit "変更を保存" %>
          </div>
          <% end %>

    </div>
  </div>
</div>