<h5>新規会員登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

   <div class="form-inline">
    <div class="form-group">
    　<lavel>名前</lavel>
      <%= f.label :（性） %>
      <%= f.text_field :fist_name, autofocus: true, :placeholder =>"令和"%>
    </div>
    <div class="form-group">
     <%= f.label :（名） %>
     <%= f.text_field :last_name, autofocus: true, :placeholder =>"道子" %>
    </div>
   </div>

      <div class="form-inline">
    <div class="form-group">
    　<lavel>フリガナ </lavel>
      <%= f.label :（セイ） %>
      <%= f.text_field :fist_name, autofocus: true, :placeholder =>"レイワ" %>
    </div>
    <div class="form-group">
     <%= f.label :（メイ） %>
     <%= f.text_field :last_name, autofocus: true, :placeholder =>"ミチコ" %>
    </div>
   </div>
  <div class="form-inline">
    <div class="form-group">

    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"メールアドレス" %><br />
    </div>
  </div>
  <div class="form-inline">
    <div class="form-group">

    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true, :placeholder =>"0000000" %><br />
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
