
<h2>ログイン</h2>
<p>会員の方はこちらからログイン</p>
<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

  <div class="form-inline">
    <div class="form-group">
      <div class="e-mail">
        <div class="ml-3 mr-2">
    <%= f.label :メールアドレス %><br />
        </div>
      </div>
    <div class="ml-4 d-flex align-items-center justify-content-center" style="height:10px";>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>
    <div class="form-inline">
      <div class="form-group">
        <div class="e-mail">
          <div class="ml-3 mr-3">
    <%= f.label :パスワード %><br />
          </div>
        </div>
          <div class="ml-5 d-flex align-items-center justify-content-center" style="height:10px";>
    <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
      </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  <h5>
  <div class="font-weight-bold">
    会員登録がお済みでない方
  </div>
</h5>
<%= link_to "こちら", customer_registration_path %>からログイン
<% end %>