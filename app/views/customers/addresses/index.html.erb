<div class="container">
  <div class="row">
    <div class="col-md-4">
    <h4>配送先登録/一覧</h4>
    <%= form_with model:@address, locsl:true do |f| %>
      <div class="form-group">
        <%= f.label :postal_code, '郵便番号'%>
        <%= f.text_field :postal_code,placeholder: '0000000' %>
      <div class="form-group">
        <%= f.label :address, '住所'%>
        <%= f.text_field :address,placeholder: '東京都渋谷区代々木神園町0-0' %>
      </div>
      <div class="form-group">
        <%= f.label :name, '宛名' %>
        <%= f.text_field :name,placeholder: '令和道子' %>
        <%= f.submit '新規投稿' %>
      </div>
    <% end %>
      </div>
        <div class="mx-auto">
          <table class="table table-bordered table-secondary">
            <thead>
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
              </tr>
            </thead>
            <% @addreeses .each do |address| %>
            <tbody>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= addrees.name%></td>
                <td></td>
              </tr>
            </tbody>
          </table>
          <% end %>
        </div>
    </div>
  </div>
</div>