<div class='container px-5 px-sm-0'>
  <div class= "row">
    <div class="col-xs-4"><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %></div>

    <div class="col-xs-5">
      <table class="table" id = none-border>
        <tbody>
          <tr>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td><%= @item.description %></td>
          </tr>
          <tr>
            <td>¥<%= @item.add_tax_price.to_s(:delimited) %> 円</td>
          </tr>

          <tr>
            <td>
              <%= form_with model: @cart_item , url: cart_items_path do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, *[1..3] %>
              <%= f.submit "カートに入れる" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>