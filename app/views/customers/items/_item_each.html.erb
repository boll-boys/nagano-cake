<div class="col-3">
  <%= link_to item_path(item.id) do %>
  <div>
    <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %>
  </div>
  <p>
    <%= item.name %>
  </p>
  <% end %>

  <% if item.is_active == true %>
    <p>¥<%= item.price.to_s(:delimited) %></p>
  <% elsif item.is_active == false %>
    <p>売り切れ中</p>
  <% end %>
</div>